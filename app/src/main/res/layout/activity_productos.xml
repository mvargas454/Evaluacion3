<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.inacap.puntaarenas.evaluacion2.Pedidos">

    <RelativeLayout
        android:layout_width="389dp"
        android:layout_height="580dp"
        android:background="@drawable/imagen3"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-3dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etnombre1"
            android:layout_alignBottom="@+id/etnombre1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Rut del cliente: " />

        <EditText
            android:id="@+id/etnombre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/textView9"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/etnombre1"
            android:layout_marginTop="18dp"
            android:text="Fecha de entrega:" />

        <EditText
            android:id="@+id/etproducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignEnd="@+id/etnombre1"
            android:layout_alignLeft="@+id/etnombre1"
            android:layout_alignRight="@+id/etnombre1"
            android:layout_alignStart="@+id/etnombre1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/etproducto"
            android:layout_marginTop="17dp"
            android:text="ID de Producto:" />

        <EditText
            android:id="@+id/etcantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignEnd="@+id/etproducto"
            android:layout_alignLeft="@+id/etproducto"
            android:layout_alignRight="@+id/etproducto"
            android:layout_alignStart="@+id/etproducto"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/etcantidad"
            android:layout_marginTop="18dp"
            android:text="Cantidades" />

        <EditText
            android:id="@+id/etfecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView12"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignEnd="@+id/etcantidad"
            android:layout_alignLeft="@+id/etcantidad"
            android:layout_alignRight="@+id/etcantidad"
            android:layout_alignStart="@+id/etcantidad"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/etfecha"
            android:layout_marginTop="16dp"
            android:text="Total:" />

        <EditText
            android:id="@+id/etprecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignLeft="@+id/etfecha"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/etfecha"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="277dp"
            tools:layout_editor_absoluteY="232dp" />

        <Button
            android:id="@+id/ingresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText"
            android:layout_marginTop="24dp"
            android:text="Ingresar Pedidos"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/revisarproductos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/id1"
            android:layout_alignRight="@+id/id1"
            android:layout_below="@+id/id1"
            android:layout_marginTop="36dp"
            android:text="Revisar Productos"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/revisarpedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ingresar"
            android:layout_alignBottom="@+id/ingresar"
            android:layout_alignEnd="@+id/revisarproductos"
            android:layout_alignLeft="@+id/revisarproductos"
            android:layout_alignRight="@+id/revisarproductos"
            android:layout_alignStart="@+id/revisarproductos"
            android:text="Revisar Pedidos"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/borrar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/revisarproductos"
            android:layout_alignBottom="@+id/revisarproductos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:elevation="1dp"
            android:text="Borrar Pedidos"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView4"
            android:layout_toEndOf="@+id/borrar1"
            android:layout_toRightOf="@+id/borrar1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/borrar1"
            android:layout_alignStart="@+id/borrar1"
            android:layout_below="@+id/ingresar"
            android:layout_marginTop="23dp"
            android:text="ID del pedido: " />

        <Button
            android:id="@+id/montos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id1"
            android:layout_toEndOf="@+id/borrar1"
            android:layout_toRightOf="@+id/borrar1"
            android:text="Montos"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etprecio"
            android:layout_alignStart="@+id/etprecio"
            android:layout_below="@+id/etprecio"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText"
            android:layout_alignBottom="@+id/editText"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13"
            android:text="Estado: " />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
