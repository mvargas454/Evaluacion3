<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.inacap.puntaarenas.evaluacion2.Login">

    <RelativeLayout
        android:layout_width="385dp"
        android:layout_height="573dp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-3dp"
        android:background="@drawable/imagen"
        >

        <EditText
            android:id="@+id/usr"
            android:layout_width="352dp"
            android:layout_height="49dp"
            android:layout_marginTop="104dp"
            android:ems="10"
            android:hint="Ingrese su nombre de usuario"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="138dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/usr"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/usr"
            android:layout_marginLeft="102dp"
            android:layout_marginStart="102dp"
            android:layout_marginTop="26dp"
            android:text="Login"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="50dp"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:hint="Ingrese su contraseÃ±a"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPassword"
            android:layout_below="@+id/usr"
            android:layout_alignLeft="@+id/usr"
            android:layout_alignStart="@+id/usr"
            android:layout_alignRight="@+id/usr"
            android:layout_alignEnd="@+id/usr" />

        <Button
            android:id="@+id/ingresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/psd"
            android:layout_marginTop="73dp"
            android:text="Ingresar"
            android:textAllCaps="false"
            android:textSize="20dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
